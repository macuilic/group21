<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the fragment of a friends profile, displaying a list of their friends -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="layout.Profile"
    android:orientation="vertical"
    android:weightSum="1">

<!-- Generates relative layout for the file -->

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="match_parent">
        
        <!-- Text box dipsplaying title "Friends" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:textColor="#000000"
            android:id="@+id/textView5" />
        
        <!-- The following ImageViews and TextViews are examples showing where the username and profile picture of other users
             would go -->
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/facebook_no_profile_pic2"
            android:scaleType="centerInside"
            android:id="@+id/imageView3"
            android:cropToPadding="false"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
